<style>

	.gd-modal {
		z-index: 1060;
	}


	.gd-modal-body {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		overflow: auto;
		background: #eee;
		background: rgba(0, 0, 0, 0.3);
	}

		.gd-modal-body > div {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			background: white;
			display: block;
		}

	.gd-modal .window-content {
		max-height: calc(100% - 36px);
		overflow: auto;
	}

		.gd-modal .window-content > div {
			height: 100%;
		}

</style>

<div class="gd-modal-body">
	<div id="modalLayout" class="window" style="width: auto; height: auto; max-height: 100%; max-width: 100%; position: absolute; top: 50%; left: 50%;">
		<div class="window-caption">
			<span class="icon"></span>
			<span class="title">@ViewBag.Title</span>
			<div class="buttons">
				<span class="editor-btn-close btn-close"></span>
			</div>
		</div>
		<div class="window-content">
			<div>
				@RenderBody()
			</div>
		</div>
	</div>
</div>
<script>
	$(".editor-btn-close").on("click", function () {
		$(".gd-modal-body").parent().css("display", "none");
		$(".gd-modal-body").parent().html("");
	});
</script>